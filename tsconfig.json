{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@components": ["src/components/*"],
      "@api": ["src/api/*"],
      "@models": ["src/models/*"],
      "@hooks": ["src/hooks/*"],
      "@context": ["src/context/*"],
      "@typeDefs": ["src/types/*"],
      "@utils": ["src/utils/*"],
      "@glossy": ["src/glossy/*"],
      "@public": ["public/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.js"]
}
